<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net45;net451;net452;net47</TargetFrameworks>
    <Version>0.1.8-alpha</Version>
    <RepositoryUrl>https://github.com/colethecoder/chronological</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/colethecoder/chronological/blob/master/LICENSE</PackageLicenseUrl>
    <Authors>Tom Cole</Authors>
    <Company />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A client for Azure Time Series Insights</Description>
    <NeutralLanguage></NeutralLanguage>
    <PackageTags>Azure Time Series Insights</PackageTags>
    <PackageProjectUrl>https://github.com/colethecoder/chronological</PackageProjectUrl>
    <AssemblyVersion>0.1.8.0</AssemblyVersion>
    <FileVersion>0.1.8.0</FileVersion>
    <PackageReleaseNotes>EventsQuery renamed EventQuery
AggregatesQuery renamed AggregateQuery
DateTime can be deserialized from EventQuery results using ResultsToType
EventQuery Content can be created from a string
AggregateQuery Content can be created from a string
Where clauses can use a predicateString instead of the Filter.* syntax</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="System.Net.WebSockets.Client">
      <Version>4.3.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.IdentityModel.Clients.ActiveDirectory" Version="3.16.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="System.Net.Requests" Version="4.3.0" />
  </ItemGroup>

</Project>
